generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model KanbanBoard {
  id        String   @id @default(cuid()) @map("_id")
  name      String
  userId    String
  createdAt DateTime @default(now())
  tasks     Task[]
}

model Task {
  id        String      @id @default(cuid()) @map("_id")
  name      String
  status    Status
  board     KanbanBoard @relation(fields: [boardId], references: [id])
  boardId   String      @map("board")
  createdAt DateTime    @default(now())
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
}
